<h1>Sign up</h1>
<%= form_for(@user, :url => user_create_path) do |f| %>
    <!-- display form errors-->
    <% if @user.errors.any? %>
        <ul>
          <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <!-- display form fields-->
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="form-group">
      <%= f.label :birthdate %>
      <%= f.date_select :birthdate %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="from-group">
      <%= f.submit("Sign up") %>
    </div>
<% end %>